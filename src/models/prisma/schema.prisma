generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User{
  id Int @id @default(autoincrement())
  firstName String 
  lasName String
  password String 
  folders Folder[]
  files File[]
}

model Folder{
  id Int @id @default(autoincrement())
  name String 
  owner User @relation(fields: [ownerID], references: [id])
  ownerID Int
  files File[]

}

model File{
  id Int @id @default(autoincrement())
  name String
  fileSize String
  fileType String
  added DateTime @default(now())
  container Folder @relation(fields:[containerID], references: [id])
  containerID Int
  owner User @relation(fields: [ownerID], references: [id])
  ownerID Int

}
